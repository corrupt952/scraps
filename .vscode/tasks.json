// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch:extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "watch:extension"],
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch:webview",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "watch:webview"],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "build"],
      "group": "build"
    }
  ]
}
