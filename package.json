{
  "name": "scraps",
  "displayName": "scraps",
  "description": "This extension allows you to make notes in the sidebar.",
  "icon": "icon.png",
  "publisher": "corrupt952",
  "repository": {
    "type": "git",
    "url": "https://github.com/corrupt952/scraps"
  },
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scraps.addItem",
        "title": "Add"
      },
      {
        "command": "scraps.renameItem",
        "title": "Rename"
      },
      {
        "command": "scraps.deleteItem",
        "title": "Delete"
      },
      {
        "command": "scraps.editItem",
        "title": "Edit"
      },
      {
        "command": "scraps.refreshList",
        "title": "Refresh"
      },
      {
        "command": "scraps.addToStorage",
        "title": "Add New Scrap",
        "icon": "$(add)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scraps",
          "title": "scraps",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "scraps": [
        {
          "type": "tree",
          "id": "scraps.list",
          "name": "List",
          "initialSize": 0.1
        },
        {
          "type": "webview",
          "id": "scraps.editor",
          "name": "Editor"
        },
        {
          "type": "webview",
          "id": "scraps.oldEditor",
          "name": "Old Editor",
          "visibility": "collapsed"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "scraps.refreshList",
          "when": "view == scraps.list",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "scraps.addToStorage",
          "when": "view == scraps.list && viewItem =~ /^storageGroup/ && viewItem =~ /available/",
          "group": "navigation@1"
        },
        {
          "command": "scraps.renameItem",
          "when": "view == scraps.list && viewItem =~ /^scrapItem/",
          "group": "1_modification"
        },
        {
          "command": "scraps.deleteItem",
          "when": "view == scraps.list && viewItem =~ /^scrapItem/",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "prewebview-ui:watch": "cd webview-ui && npm install",
    "webview-ui:watch": "cd webview-ui && npm run watch",
    "webview-ui:compile": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run webview-ui:compile && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test",
    "package": "npx vsce package",
    "publish": "npx vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "22.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "uuid": "^11.1.0"
  }
}
