{
  "name": "scraps-monorepo",
  "private": true,
  "description": "Scraps VSCode Extension Monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/corrupt952/scraps"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.30.0",
  "scripts": {
    "build": "pnpm -r run build",
    "build:webview": "pnpm -F @scraps/webview-ui build",
    "build:extension": "pnpm -F scraps compile",
    "watch:webview": "pnpm -F @scraps/webview-ui watch",
    "watch:extension": "pnpm -F scraps watch",
    "lint": "pnpm -r run lint",
    "test": "pnpm -F scraps test",
    "package": "pnpm run build:webview && pnpm -F scraps package",
    "publish": "pnpm run build:webview && pnpm -F scraps publish",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^10.0.0",
    "prettier": "^3.7.4",
    "typescript": "^5.4.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
